<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
        <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, '仕事' %>
  <%= f.text_field :status %>
  
  <%= f.label :content, '内容' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>
